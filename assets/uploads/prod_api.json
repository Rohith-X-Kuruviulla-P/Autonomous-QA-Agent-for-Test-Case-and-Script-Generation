{
  "api_name": "E-Shop Backend API",
  "version": "v1.0",
  "endpoints": [
    {
      "path": "/apply_coupon",
      "method": "POST",
      "description": "Validates discount code",
      "request": {
        "code": "string"
      },
      "responses": {
        "200": { "valid": true, "discount_percent": 15 },
        "400": { "valid": false, "error": "Invalid Coupon Code" }
      }
    },
    {
      "path": "/submit_order",
      "method": "POST",
      "description": "Processes final payment",
      "request": {
        "user": {
          "name": "string",
          "email": "string"
        },
        "cart": {
          "total": "number",
          "items": "array"
        }
      },
      "responses": {
        "200": { "message": "Payment Successful!" },
        "422": { "error": "Validation Failed" }
      }
    }
  ]
}